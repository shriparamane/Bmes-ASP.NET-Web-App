@{
    ViewData["Title"] = "Cart Detail";
    var cartTotal = Convert.ToDecimal(ViewData["CartTotal"]);
    var cartItemsCount = Convert.ToInt32(ViewData["CartItemsCount"]);
    var cartItems = ViewData["CartItems"] as IEnumerable<CartItem>;
    var removeFromCartViewModel = new RemoveFromCartViewModel();
}


<div class="container cart_detail">
    <div class="row no-gutters display-flex cart_detail__row">
        <div class="col-md-9 cart_detail__cart-panel">
            <div class="cart_detail__cart-panel-header">
                <div class="cart_detail__cart-panel-title ">
                    <p>Your Cart</p>
                </div>
                <div>
                    <a href="/" class="cart_detail__continue-shopping-button">Continue Shopping</a>
                </div>
            </div>
            <div>
                <table class="table table-bordered table-striped">
                    <thead class="cart_detail__table-head">
                        <tr>
                            <th class="cart_detail__table-head-item">Item</th>
                            <th></th>
                            <th class="text-center cart_detail__table-head-item">Price</th>
                            <th class="text-center cart_detail__table-head-item">Quantity</th>
                            <th class="text-center cart_detail__table-head-item">Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in cartItems)
                        {
                            <tr class="cart_detail__table-body-item-wrapper">
                                <td class="text-center">
                                    <img src="/images/productimages/main/@item.Product.ImageUrl" class="cart_detail__image" />
                                </td>
                                <td class="text-left cart_detail__table-body-item-name">@item.Product.Name</td>
                                <td class="text-center cart_detail__table-body-item-price">$@item.Product.Price</td>
                                <td class="text-center cart_detail__table-body-item-quantity">@item.Quantity</td>
                                <td class="text-center cart_detail__table-body-item-total">$@(item.Quantity * item.Product.Price)</td>
                                <td class="text-center">
                                    <form asp-controller="Cart" asp-action="RemoveCartItem" method="post">
                                        <input type="hidden" asp-for="@removeFromCartViewModel.CartItemId" name="CartItemId" value="@item.Id" />
                                        <button type="submit" class="cart_detail__table-remove-button">X</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-3 cart_detail__summary-panel">
            <div class="cart_detail__summary-panel-title-wrapper">
                <p class="cart_detail__summary-panel-title">Cart Summary</p>
            </div>
            <div class="cart_detail__summary-panel-total">
                <span class="cart_detail__summary-panel-total-title">Items(@cartItemsCount)</span>
                <span>$@cartTotal</span>
            </div>
            <div class="cart_detail__summary-panel-ads">
                <p class="cart_detail__summary-panel-ads-lable">Free 3-Day Shipping!</p>
            </div>
            <div style="margin-top: 25px;">
                <a asp-controller="Checkout" asp-action="Checkout" class="cart_detail__summary-panel-checkout-button">PROCEED TO CHECKOUT</a>
            </div>
        </div>
    </div>
</div>




